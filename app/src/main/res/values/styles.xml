<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:statusBarColor" tools:targetApi="m">@color/colorWhite</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="BoldText">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/sfpro_bold</item>
        <item name="android:textColor" tools:targetApi="lollipop">@color/colorBlack</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">28dp</item>

    </style>

    <style name="SemiBoldText">
        <item name="android:fontFamily">@font/sf_pro_display_semibold</item>
    </style>

    <style name="RegularText">
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
    </style>

</resources>
